@model List<MultipleAddress> 
<form method="post">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Multiple Address</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="AddMultipleAddress" asp-action="AddAddress" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>  Create New Address
                    </a>
                </div>
            </div>

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Street Address
                        </th>
                        <th>
                            City
                        </th>
                        <th>State</th>
                        <th>PostalCode</th>
                        <th>Phone Number</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>
                                @obj.StreetAddress
                            </td>
                            <td>
                                @obj.City
                            </td>
                            <td>
                                @obj.State
                            </td>
                            <td>
                                @obj.PostalCode
                            </td>
                            <td>
                                @obj.PhoneNumber
                            </td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-area="Customer" asp-controller="Cart" asp-action="setAddress" asp-route-id="@obj.Id" class="btn btn-success mx-2">
                                        <i class="bi bi-check-square"></i> Set
                                    </a>
                                    <a asp-area="Customer" asp-controller="AddMultipleAddress" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</form>

