@model MultipleAddress

<div class="row mt-3 mx-3" style="margin-top:25px ;">
    <div class="col-md-3">
        <div style="margin-top: 50px; margin-left: 10px;" class="text-center">
            <i id="animationDemo" data-mdb-animation="slide-right" data-mdb-toggle="animation"
               data-mdb-animation-reset="true" data-mdb-animation-start="onScroll"
               data-mdb-animation-on-scroll="repeat" class="fas fa-3x fa-shipping-fast text-white"></i>
            <h3 class="mt-3 text-white">Welcome</h3>
            <p class="white-text">You are 30 seconds away from compleating your order!</p>
        </div>
        <div class="text-center">
            <a asp-action="Index" type="submit" class="btn btn-white btn-rounded back-button">Go back</a>
        </div>


    </div>

    <div class="col-md-9 justify-content-center">
        <div class="card card-custom pb-4">
            <div class="card-body mt-0 mx-5">
                <div class="text-center mb-3 pb-2 mt-3">
                    <h4 style="color: #495057 ;">Delivery Details</h4>
                </div>

                <form method="post" class="mb-0">
                    <input asp-for="Id" hidden/>
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <input asp-for="Name" disabled type="text" id="form9Example1" class="form-control input-custom" />
                                <label asp-for="Name" class="form-label" for="form9Example1">Name</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <input asp-for="PhoneNumber" disabled type="text" id="form9Example2" class="form-control input-custom" />
                                <label asp-for="PhoneNumber" class="form-label" for="form9Example2">Phone Number</label>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <input asp-for="StreetAddress" disabled type="text" id="form9Example6" class="form-control input-custom" />
                                <label asp-for="StreetAddress" class="form-label" for="form9Example6">Address</label>
                                <span asp-validation-for="StreetAddress" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <input asp-for="PostalCode" disabled type="text" id="form9Example4" class="form-control input-custom" />
                                <label asp-for="PostalCode" class="form-label" for="form9Example4">Postal Code</label>
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <input asp-for="City" type="text" disabled id="form9Example3" class="form-control input-custom" />
                                <label asp-for="City" class=" form-label" for="form9Example3">City</label>
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <input asp-for="State" type="text" disabled id="typeEmail" class="form-control input-custom" />
                                <label asp-for="State" class="form-label" for="typeEmail"></label>
                                <span asp-validation-for="State" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="float-end ">
                        <!-- Submit button -->
                        <button type="submit" class="btn btn-danger btn-rounded"
                                style="background-color: #0062CC ;">
                            Delete
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>