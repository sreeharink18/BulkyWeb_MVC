<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-3">
            <!-- Adjusted margin here -->
            <div class="wrapper">
                <div class="card">
                    <div class="cross-bg">
                    </div>
                    <div class="content">
                        <div class="logo text-right">
                            <img src="https://i.imgur.com/w68MQc4.png" width="80">
                        </div>
                        @if (item.DiscountAmout > 0)
                        {
                            <div class="text-center text-uppercase text-white off">
                                <span>Flat</span>
                                <h1 class="mt-0">&#x20b9; @item.DiscountAmout</h1>
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-uppercase text-white off">
                                <span>Flat</span>
                                <h1 class="mt-0">@item.DiscountAmout %</h1>
                            </div>
                        }
                        <div class="px-5 mb-3">
                            <div class="code text-center mt-4">
                                <span>Use code: @item.CouponCode</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if ((Array.IndexOf(Model.ToArray(), item) + 1) % 3 == 0)
        {
            <div class="w-100"></div> <!-- Add this line to clear the float and start a new row -->
        }
    }
</div>



