        <div class="wrapper">
            <div class="card">
                <div class="cross-bg">
                </div>
                <div class="content">
                    <div class="logo text-right">
                        <img src="https://i.imgur.com/w68MQc4.png" width="80">
                    </div>
                    <div class="text-center text-uppercase text-white off">
                        <span>Flat</span>
                        <h1 class="mt-0">@item.DiscountAmout</h1>
                    </div>
                    <div class="text-center text-white">
                        <span class="plus">+</span>
                    </div>
                    <div class="text-center text-uppercase text-white">
                        <h3 class="m-0">10% OFF</h3>
                    </div>
                    <div class="px-5 mb-3">
                        <div class="code text-center mt-4">
                            <span>Use code : @item.CouponCode</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
