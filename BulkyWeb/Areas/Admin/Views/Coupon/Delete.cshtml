@model Coupon
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" id="yourFormId">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="CouponCode" disabled class="form-control border-0 shadow" />
                    <label asp-for="CouponCode" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="MinAmout" disabled class="form-control border-0 shadow" />
                    <label asp-for="MinAmout" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DiscountAmout" disabled class="form-control border-0 shadow" />
                    <label asp-for="DiscountAmout" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="IsValid" disabled class="form-control border-0 shadow" />
                    <label asp-for="IsValid" class="ms-2"></label>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button  type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Coupon" asp-action="Index" class="btn btn-secondary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>