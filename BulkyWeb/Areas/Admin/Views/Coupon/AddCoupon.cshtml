@model Coupon
@{
    var UserId = Context.Request.Query["userid"];
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Add Coupon</h2>
               
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                
                
                <input asp-for="ApplicationUserId" value="@UserId" hidden />
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="CouponCode" class="form-control border-0 shadow" />
                    <label asp-for="CouponCode" class="ms-2"></label>
                    <span asp-validation-for="CouponCode" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="MinAmout" class="form-control border-0 shadow" />
                    <label asp-for="MinAmout" class="ms-2"></label>
                    <span asp-validation-for="MinAmout" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DiscountAmout" class="form-control border-0 shadow" />
                    <label asp-for="DiscountAmout" class="ms-2"></label>
                    <span asp-validation-for="DiscountAmout" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Coupon" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>




@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}